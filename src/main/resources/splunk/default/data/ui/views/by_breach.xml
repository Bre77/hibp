<form version="1.1" theme="dark">
  <label>By Breach</label>
  <fieldset submitButton="false">
    <input type="dropdown" token="breach">
      <label>Breach</label>
      <fieldForLabel>Title</fieldForLabel>
      <fieldForValue>Breach</fieldForValue>
      <search>
        <query>`hibp_index` sourcetype="hibp:pwned" | stats count by Breach Title 
| eval Title=Title." (".count." pwned)"</query>
        <earliest>0</earliest>
        <latest>now</latest>
      </search>
    </input>
  </fieldset>
  <row>
    <panel>
      <title>Domains Involved</title>
      <single>
        <search>
          <query>`hibp_index` sourcetype="hibp:pwned" Breach=$breach$
| dedup Domain sortby _time
| timechart count 
| streamstats sum(count) as count</query>
          <earliest>0</earliest>
          <latest></latest>
        </search>
        <option name="drilldown">none</option>
        <option name="rangeColors">["0x53a051","0x0877a6","0xf8be34","0xf1813f","0xdc4e41"]</option>
        <option name="refresh.display">progressbar</option>
      </single>
    </panel>
    <panel>
      <title>Emails Pwned</title>
      <single>
        <search>
          <query>`hibp_index` sourcetype="hibp:pwned" Breach=$breach$ 
| dedup Email sortby _time 
| timechart count 
| streamstats sum(count) as count</query>
          <earliest>0</earliest>
          <latest></latest>
        </search>
        <option name="drilldown">none</option>
        <option name="refresh.display">progressbar</option>
      </single>
    </panel>
    <panel>
      <title>Total Instances</title>
      <single>
        <search>
          <query>`hibp_index` sourcetype="hibp:pwned" Breach=$breach$ 
| timechart count 
| streamstats sum(count) as count</query>
          <earliest>0</earliest>
          <latest></latest>
        </search>
        <option name="drilldown">none</option>
        <option name="refresh.display">progressbar</option>
      </single>
    </panel>
  </row>
  <row>
    <panel>
      <table>
        <search>
          <query>| inputlookup hibp-breaches where Name=$breach$
| table Description
| eval Description=urldecode(Description)</query>
          <earliest>-24h@h</earliest>
          <latest>now</latest>
        </search>
        <option name="drilldown">none</option>
        <option name="refresh.display">progressbar</option>
      </table>
    </panel>
  </row>
  <row>
    <panel>
      <table>
        <search>
          <query>| inputlookup hibp-breaches where Name=$breach$
| table Domain BreachDate AddedDate ModifiedDate PwnCount DataClasses</query>
          <earliest>-24h@h</earliest>
          <latest>now</latest>
        </search>
        <option name="drilldown">none</option>
        <option name="refresh.display">progressbar</option>
        <format type="number" field="PwnCount">
          <option name="precision">0</option>
        </format>
      </table>
    </panel>
    <panel>
      <single>
        <search>
          <query>| inputlookup hibp-breaches where Name=$breach$
| table Is*</query>
          <earliest>-24h@h</earliest>
          <latest>now</latest>
        </search>
        <option name="colorMode">block</option>
        <option name="drilldown">none</option>
        <option name="height">119</option>
        <option name="rangeColors">["0x555","0x1182f3","0xdc4e41"]</option>
        <option name="rangeValues">[0,1]</option>
        <option name="refresh.display">progressbar</option>
        <option name="trellis.enabled">1</option>
        <option name="trellis.size">medium</option>
        <option name="useColors">1</option>
        <option name="useThousandSeparators">0</option>
      </single>
    </panel>
  </row>
  <row>
    <panel>
      <table>
        <search>
          <query>`hibp_index` sourcetype="hibp:pwned" Breach=$breach$ | table Email</query>
          <earliest>0</earliest>
          <latest></latest>
        </search>
        <option name="drilldown">cell</option>
        <option name="refresh.display">progressbar</option>
        <drilldown>
          <link target="_blank">/app/hibp/by_email?form.email=$click.value$</link>
        </drilldown>
      </table>
    </panel>
  </row>
</form>